<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".views.PlayerIntroActivity"
        android:background="@drawable/player_intro">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:fitsSystemWindows="true"
            android:layout_height="209dp"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/intro_toolbar"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:toolbarId="@+id/toolbar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/colorPrimary">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_height="29dp"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="44dp" android:id="@+id/credits_TextView" android:textSize="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/app_bar"
            android:fontFamily="sans-serif" android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="44dp" android:id="@+id/difficulty_TextView" android:textSize="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/credits_TextView"
            android:fontFamily="sans-serif" android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="44dp" android:id="@+id/ship_TextView" android:textSize="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/difficulty_TextView"
            android:fontFamily="sans-serif" android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="43dp" android:id="@+id/points_TextView" android:textSize="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/ship_TextView"
            android:fontFamily="sans-serif" android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trader_TextView" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/app_bar"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/fighter_TextView"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pilot_TextView" android:textSize="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/engineer_TextView"
            app:layout_constraintStart_toEndOf="@+id/trader_TextView" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="@+id/app_bar"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fighter_TextView"
            android:textSize="30sp" tools:layout_editor_absoluteY="41dp"
            app:layout_constraintEnd_toStartOf="@+id/engineer_TextView" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintHorizontal_bias="0.076"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/engineer_TextView"
            android:textSize="30sp" tools:layout_editor_absoluteY="41dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="68dp"/>
    <Button
            android:text="Universe"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/toUniverseButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="604dp" app:layout_constraintTop_toTopOf="parent"
            android:onClick="goToUniverseActivity" app:layout_constraintStart_toEndOf="@+id/marketButton"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Market"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:id="@+id/marketButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/points_TextView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.57"
            android:layout_marginStart="200dp" app:layout_constraintStart_toStartOf="parent"
            android:onClick="goToMarketActivity"/>


</android.support.constraint.ConstraintLayout>
