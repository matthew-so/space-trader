<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainActivity"
        android:background="@drawable/space">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Space Trader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/title"
            app:layout_constraintVertical_bias="0.219"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:typeface="normal"
            android:textStyle="bold" android:textColor="@android:color/holo_blue_bright" android:textAllCaps="true"
            android:fontFamily="serif" android:textColorLink="@color/design_default_color_primary"
            android:textColorHint="@android:color/holo_green_dark"/>

    <Button
            android:text="BEGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_start" android:layout_marginTop="228dp"
            app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" app:layout_constraintHorizontal_bias="0.0"
            android:onClick="goToConfigurationScreen"/>

</android.support.constraint.ConstraintLayout>