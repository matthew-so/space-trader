<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MarketplaceActivity">
    <android.support.v7.widget.RecyclerView
            android:layout_width="160dp"
            android:layout_height="629dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:animateLayoutChanges="true"
            android:id="@+id/rvContacts"
            android:layout_marginStart="6dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/playerGoodsRV" android:scrollbars="horizontal|vertical"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="160dp"
            android:layout_height="623dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.545" android:id="@+id/playerGoodsRV"
            app:layout_constraintStart_toEndOf="@+id/rvContacts" android:layout_marginStart="36dp"
            android:scrollbars="horizontal|vertical"/>
    <TextView
            android:text="Market Goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rvContacts" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Player Goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/playerGoodsRV" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="120dp" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/credits_TextView" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:layout_width="107dp"
            android:layout_height="63dp"
            android:id="@+id/credits_TextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/playerGoodsRV"
            app:layout_constraintVertical_bias="0.222"/>
</android.support.constraint.ConstraintLayout>